<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="12dp">


    <ImageView
        android:id="@+id/imgItemArticle"
        android:layout_width="88dp"
        android:layout_height="84dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/llArticleInfo"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgItemArticle"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvArticleDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_black"
            android:textSize="12sp"
            tools:text="Thu, Apr 19 * 20.00 Pm" />

        <TextView
            android:id="@+id/tvArticleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipSize="end"
            android:maxLines="3"
            android:textColor="@color/grey_black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:textFontWeight="700"
            tools:text="Musk invited to UK Parliament to discuss $44 billion Twitter buyout" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgHeart"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_heart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/llArticleInfo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="17dp"
        android:src="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgHeart"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>